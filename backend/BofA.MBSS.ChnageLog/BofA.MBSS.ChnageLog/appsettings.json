{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BofA.MBSS.ChnageLog": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  "Bitbucket": {
    "BaseUrl": "https://bitbucket.company.internal",
    "AccessToken": "your-bitbucket-access-token",
    "TimeoutSeconds": 30
  },
  
  "Jira": {
    "BaseUrl": "https://jira.company.internal",
    "AccessToken": "your-jira-access-token",
    "TimeoutSeconds": 30,
    "EpicLinkFieldName": "customfield_10371",
    "PmEpicFieldName": "customfield_12272"
  },
  
  "Repositories": [
    { "ProjectKey": "PAY", "Slug": "payments-api" },
    { "ProjectKey": "PAY", "Slug": "settlements-engine" },
    { "ProjectKey": "CORE", "Slug": "platform-services" }
  ],
  
  "BranchParser": {
    "AllowedPrefixes": ["feature", "bugfix"],
    "JiraProjects": ["MBCS", "MBBO", "MBOS", "MBSS"]
  },
  
  "Validation": {
    "MaxDateRangeDays": 90,
    "MaxReposPerRequest": 10,
    "DefaultReleaseBranch": "release/2025-09"
  }
}
